{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.38.33.27573",
      "templateHash": "18295840896027321055"
    }
  },
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Azure region for all resources"
      }
    },
    "resourcePrefix": {
      "type": "string",
      "defaultValue": "w365",
      "metadata": {
        "description": "Prefix for resource naming"
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": {
        "Purpose": "Windows 365 Custom Image",
        "Environment": "Production",
        "ManagedBy": "Bicep"
      },
      "metadata": {
        "description": "Tags to apply to all resources"
      }
    }
  },
  "variables": {
    "managedIdentityName": "[format('{0}-imagebuilder-identity', parameters('resourcePrefix'))]",
    "galleryName": "[replace(format('{0}gallery', parameters('resourcePrefix')), '-', '')]",
    "imageDefinitionName": "Win11-W365-Custom",
    "vnetName": "[format('{0}-vnet', parameters('resourcePrefix'))]",
    "subnetName": "imagebuilder-subnet",
    "nsgName": "[format('{0}-nsg', parameters('resourcePrefix'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2023-05-01",
      "name": "[variables('nsgName')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "properties": {
        "securityRules": [
          {
            "name": "AllowAzureImageBuilder",
            "properties": {
              "description": "Allow Azure Image Builder service",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "443",
              "sourceAddressPrefix": "AzureImageBuilder",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 100,
              "direction": "Inbound"
            }
          },
          {
            "name": "AllowOutboundInternet",
            "properties": {
              "description": "Allow outbound internet for updates and downloads",
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "*",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "Internet",
              "access": "Allow",
              "priority": 100,
              "direction": "Outbound"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2023-05-01",
      "name": "[variables('vnetName')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "10.100.0.0/16"
          ]
        },
        "subnets": [
          {
            "name": "[variables('subnetName')]",
            "properties": {
              "addressPrefix": "10.100.1.0/24",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
              },
              "privateEndpointNetworkPolicies": "Disabled",
              "privateLinkServiceNetworkPolicies": "Enabled"
            }
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
      ]
    },
    {
      "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
      "apiVersion": "2023-01-31",
      "name": "[variables('managedIdentityName')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]"
    },
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2022-04-01",
      "name": "[guid(resourceGroup().id, resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName')), 'Contributor')]",
      "properties": {
        "roleDefinitionId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', 'b24988ac-6180-42a0-ab88-20f7382dd24c')]",
        "principalId": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName')), '2023-01-31').principalId]",
        "principalType": "ServicePrincipal"
      },
      "dependsOn": [
        "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName'))]"
      ]
    },
    {
      "type": "Microsoft.Compute/galleries",
      "apiVersion": "2023-07-03",
      "name": "[variables('galleryName')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "properties": {
        "description": "Windows 365 Custom Image Gallery",
        "identifier": {}
      }
    },
    {
      "type": "Microsoft.Compute/galleries/images",
      "apiVersion": "2023-07-03",
      "name": "[format('{0}/{1}', variables('galleryName'), variables('imageDefinitionName'))]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "properties": {
        "osType": "Windows",
        "osState": "Generalized",
        "hyperVGeneration": "V2",
        "identifier": {
          "publisher": "TechmentorOrlando",
          "offer": "W365-Custom",
          "sku": "Win11-25H2-M365"
        },
        "recommended": {
          "vCPUs": {
            "min": 2,
            "max": 8
          },
          "memory": {
            "min": 4,
            "max": 32
          }
        },
        "features": [
          {
            "name": "SecurityType",
            "value": "TrustedLaunch"
          }
        ],
        "architecture": "x64",
        "description": "Windows 11 25H2 with Microsoft 365 Apps and custom configurations for Windows 365"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Compute/galleries', variables('galleryName'))]"
      ]
    }
  ],
  "outputs": {
    "managedIdentityId": {
      "type": "string",
      "value": "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName'))]"
    },
    "managedIdentityPrincipalId": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName')), '2023-01-31').principalId]"
    },
    "managedIdentityClientId": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName')), '2023-01-31').clientId]"
    },
    "galleryName": {
      "type": "string",
      "value": "[variables('galleryName')]"
    },
    "galleryId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Compute/galleries', variables('galleryName'))]"
    },
    "imageDefinitionName": {
      "type": "string",
      "value": "[variables('imageDefinitionName')]"
    },
    "imageDefinitionId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Compute/galleries/images', variables('galleryName'), variables('imageDefinitionName'))]"
    },
    "vnetId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]"
    },
    "vnetName": {
      "type": "string",
      "value": "[variables('vnetName')]"
    },
    "subnetId": {
      "type": "string",
      "value": "[format('{0}/subnets/{1}', resourceId('Microsoft.Network/virtualNetworks', variables('vnetName')), variables('subnetName'))]"
    },
    "subnetName": {
      "type": "string",
      "value": "[variables('subnetName')]"
    },
    "nsgId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
    },
    "resourceGroupName": {
      "type": "string",
      "value": "[resourceGroup().name]"
    },
    "location": {
      "type": "string",
      "value": "[parameters('location')]"
    }
  }
}